<%= form_with model: event, class: "space-y-6 bg-white p-6 rounded shadow-md max-w-xl mx-auto" do |form| %>
  <h2 class="text-2xl font-bold text-gray-800 mb-4">Event Details</h2>

  <div>
    <%= form.label :title, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.text_area :description, rows: 4, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :date, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.date_field :date, min: Date.current, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :location, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.text_field :location, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :time, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.time_field :time, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <label for="category" class="block text-gray-700 font-medium mb-1">Category</label>
    <select
      name="event[category]"
      id="category"
      class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    >
      <option value="">Select a category</option>
      <option value="entertainment">Entertainment</option>
      <option value="dining">Dining</option>
      <option value="business">Business</option>
      <option value="sports">Sports</option>
      <option value="education">Education</option>
    </select>
  </div>

  <div>
    <%= form.label :photo, "Event Image", class: "block text-gray-700 font-medium mb-1" %>
    <%= form.file_field :photo, multiple: false, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Save Event", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded shadow" %>
  </div>
<% end %>
